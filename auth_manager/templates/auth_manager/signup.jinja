{% extends "auth_manager/auth_base.jinja" %}

{% block title %}Signup{% endblock %}

{% block content %}
<div class="d-flex justify-content-center align-items-center" style="height: 100vh; background-color: #f8f9fa;">
    <div class="card shadow p-4" style="min-width: 500px;">
        <h3 class="text-center mb-4">Signup</h3>
        <form method="POST" novalidate>
            {% csrf_token %}
            <div class="mb-3">
                <label class="form-label">Email*</label>
                {{ signup_form.email }}
            </div>

            <div class="mb-3">
                <label class="form-label">Password*</label>
                <div class="input-group">
                    {{ signup_form.password1 }}
                    <button type="button" id="p1_button" class="btn btn-outline-secondary" onclick="togglePassword()"> Show </button>
                </div>
                
            </div>
            <div class="mb-3">
                <label class="form-label">Confirm Password*</label>
                <div class="input-group">
                    {{ signup_form.password2 }}
                    <button type="button" id="p2_button" class="btn btn-outline-secondary" onclick="togglePassword()"> Show </button>
                </div>
                
            </div>
            <button class="btn btn-primary w-100" type="submit">
                Signup
            </button>
            <p class="mt-3 text-muted">
                    Already have an account?
                    <a href="{{ url('auth_manager:auth_login') }}">Login</a>
            </p>
            

        </form>
        {% if has_errors == True %}
            <ul class="list-group">
                {%for err in errors %}
                <li class="list-group-item list-group-item-danger">{{err}}</li>
                {% endfor %}
            </ul>
        {% endif %}
    </div>
<script>
function togglePassword() {
    const p1 = document.getElementById("id_password1");  // default id from Django
    const p2 = document.getElementById("id_password2");
    const p1_button = document.getElementById("p1_button");
    const p2_button = document.getElementById("p2_button");

    if (p1.type === "password") {
        p1.type = "text";
        p2.type = "text";
        p1_button.textContent = "Hide";
        p2_button.textContent = "Hide";
    } else {
        p1.type = "password";
        p2.type = "password";
        p1_button.textContent = "Show";
        p2_button.textContent = "Show";
        
    }
}
</script>
</div>
{% endblock %}