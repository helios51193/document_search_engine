<div class="table-responsive">
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Time</th>
                <th>Query</th>
                <th>Results</th>
                <th>Threshold</th>
                <th>Top Score</th>
            </tr>
        </thead>
        <tbody>
        {% for e in events %}
            <tr>
                <td>{{ e.created_at|timesince }} ago</td>
                <td>{{ e.query }}</td>
                <td>{{ e.result_count }}</td>
                <td>{{ e.threshold }}</td>
                <td>{{ e.top_score }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
