<form id="search-form"
    hx-get="{{ url('document_manager:document_search_result_panel') }}"
    hx-target="#search-results-panel"
    hx-trigger="submit"
    hx-include="#search-form"
    >

    <div class="row g-2">
        <div class="col-md-7">
            <input type="text" class="form-control" name="q"
                placeholder="Search..." autocomplete="off" required>
        </div>
        <div class="col-md-3">
            <select name="threshold" id="threshold-select" class="form-select">
                <option value="0.9">Strict (0.90)</option>
                <option value="0.75">High (0.75)</option>
                <option value="0.60" selected>Balanced (0.60)</option>
                <option value="0.45">Loose (0.45)</option>
                <option value="0.30">Very Loose (0.40)</option>
            </select>
        </div>
        <div class="col-md-1 d-grid">
            <button class="btn btn-primary" type="submit">
                Search
            </button>
        </div>
        <div class="col-md-1 d-grid">
            <button
                type="reset"
                class="btn btn-outline-secondary"
                id="clear-btn"
                hx-get="{{ url('document_manager:document_search_result_panel') }}"
                hx-target="#search-results-panel"
                hx-vals='{"q": ""}'
                hx-swap="innerHTML"
                _="on click set #search-query.value to '' then set #threshold-select.value to '0.75'"
            >
            Clear
            </button>
        </div>
    </div>
</form>